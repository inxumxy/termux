RewriteEngine On

# Webhook endpoint for user bots
RewriteRule ^webhook\.php$ webhook.php [L]

# Main bot webhook
RewriteRule ^$ index.php [L]

# Security
<Files "bot_database.db">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "*.txt">
    Order allow,deny
    Deny from all
</Files>

# PHP settings
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 30
php_value memory_limit 128M
